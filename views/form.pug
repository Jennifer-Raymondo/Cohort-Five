doctype html
html
  head
    title Student Application Form
    link(rel="stylesheet" href="/css/style.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet")
  body
    .container-fluid.d-flex.flex-wrap
      .left-section
      img(src="/images/1. Form on load.PNG" alt="Form on load")
      .right-section
        h2.text-center.mb-4 STUDENT APPLICATION FORM

        if success
          .alert.alert-success.text-center Form has been Submitted successfully!

        form(action="/" method="POST" class="row g-3" novalidate)
          .col-md-6
            label.form-label(for="firstName") First Name *
            input.form-control(type="text" name="firstName" required minlength="1")
            .invalid-feedback Invalid field
          .col-md-6
            label.form-label(for="lastName") Last Name *
            input.form-control(type="text" name="lastName" required minlength="1")
            .invalid-feedback Invalid field

          .col-md-6
            label.form-label(for="course") Course *
            select.form-select(name="course" required)
              option(value="" selected) -- Select --
              option BSc in Computer Science
              option BBA
              option Nursing
            .invalid-feedback This field is required
          .col-md-6
            label.form-label(for="entryScheme") Entry Scheme *
            select.form-select(name="entryScheme" required)
              option(value="" selected) -- Select --
              option Direct Entry
              option Diploma Entry
              option Mature Age
            .invalid-feedback This field is required

          .col-md-6
            label.form-label(for="intake") Intake *
            select.form-select(name="intake" required)
              option(value="" selected) -- Select --
              option January
              option May
              option September
            .invalid-feedback This field is required
          .col-md-6
            label.form-label(for="sponsorship") Sponsorship *
            select.form-select(name="sponsorship" required)
              option(value="" selected) -- Select --
              option Government
              option Private
            .invalid-feedback This field is required

          .col-12
            label.form-label Gender *
            .d-flex.gap-3
              .form-check
                input.form-check-input(type="radio" name="gender" value="Male" required)
                label.form-check-label Male
              .form-check
                input.form-check-input(type="radio" name="gender" value="Female" required)
                label.form-check-label Female
            .invalid-feedback.d-block Please select your gender

          .col-md-6
            label.form-label(for="dob") Date of Birth *
            input.form-control(type="date" name="dob" required)
            .invalid-feedback This field is required
          .col-md-6
            label.form-label(for="residence") Residence *
            input.form-control(type="text" name="residence" required minlength="1")
            .invalid-feedback Invalid field

          .col-12.text-center
            button.btn.btn-success(type="submit") SUBMIT

    script.
      // Bootstrap custom validation
      (() => {
        'use strict'
        const forms = document.querySelectorAll('form')
        Array.from(forms).forEach(form => {
          form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
      })()
